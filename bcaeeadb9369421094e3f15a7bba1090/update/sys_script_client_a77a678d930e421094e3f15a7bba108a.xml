        <field>start_date</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Event start date validation</name>
        <order/>
        <script><![CDATA[function onChange() {

    var startDate = g_form.getValue('start_date');


    var currentDate = new Date();

    // Convert start date to Date object
    var startDateObj = new Date(startDate);

    // Validate start date is not before today
    if (startDateObj < currentDate) {
		g_form.clearValue('start_date');
        g_form.showFieldMsg('start_date', 'Start date cannot be before today', 'error');
        return;
    }

    // Clear any existing error message
    g_form.clearMessages('start_date');
}]]></script>
