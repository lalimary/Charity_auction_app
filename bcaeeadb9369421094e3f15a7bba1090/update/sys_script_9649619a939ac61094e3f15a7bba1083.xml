        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    // Get the current bid amount
    var currentBidAmount = parseFloat(current.current_bid_amount);

    // Get the new bid amount
    var newBidAmount = parseFloat(current.your_bid_amount);

    // Ensure the new bid amount is greater than the current bid amount
    if (newBidAmount > currentBidAmount) {
        // Update the current bid amount
        current.current_bid_amount = newBidAmount;

        // Optionally, you can also update the highest bid flag
        // current.highest_bid = true;
    } else {
        // Prevent the bid from being saved if it is not greater than the current bid amount
        gs.addErrorMessage('Your bid amount must be greater than the current bid amount.');
        current.setAbortAction(true);
    }
})(current, previous);
]]></script>
