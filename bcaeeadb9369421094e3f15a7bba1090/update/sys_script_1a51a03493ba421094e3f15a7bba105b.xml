        <script><![CDATA[(function executeRule(current, previous) {
    if (!gs.hasRole('x_1383184_charityb.admin')) {
        var userId = gs.getUserID();

        var userProfileGr = new GlideRecord('x_1383184_charityb_user_profile');
        userProfileGr.addQuery('name', userId);
        userProfileGr.query();

        if (userProfileGr.next()) {

            var userCountry = userProfileGr.getDisplayValue('location.country');

            if (userCountry) {

                current.addQuery('donator.location.country', userCountry);
                return;
            }
        }

        return null;
    }
})(current, previous);]]></script>
