        <script><![CDATA[function onSubmit() {
    var yourBidAmount = parseFloat(g_form.getValue('your_bid_amount'));
    var itemName = g_form.getValue('item_name'); // Assuming 'item_unique_number' is the reference field linking the bid to the item
    var highestBidAmount;

    // Query the item record associated with the bid
    var item = new GlideRecord('x_1383184_charityb_item');
    item.addQuery('item_name', itemName);
    item.query();
    
    if (item.next()) {
        highestBidAmount = parseFloat(item.getValue('highest_bid_amount') || 0); // Convert to float, default to 0 if highest bid amount is not set
        
        if (yourBidAmount > highestBidAmount) {
            // Your bid amount is higher, proceed with submission
            return true;
        } else {
            // If the bid is not higher, show an error message
            g_form.addErrorMessage('Your bid amount must be higher than the current highest bid amount.');
            return false;
        }
    } else {
        // If the item record is not found, show an error message
        g_form.addErrorMessage('The item associated with this bid was not found.');
        return false;
    }
}
]]></script>
