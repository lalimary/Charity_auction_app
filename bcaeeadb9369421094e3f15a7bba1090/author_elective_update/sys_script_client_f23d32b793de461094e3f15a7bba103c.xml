    <sys_script_client action="DELETE">
        <active>false</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description/>
        <field>your_bid_amount</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>script 1</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    if (isLoading || newValue === '') {
        return;
    }

    var yourBidAmount = parseFloat(newValue);
    var itemSysId = g_form.getValue('item_name'); // Assuming 'item_name' is the reference field linking the bid to the item

    // Query the item record associated with the bid
    var itemGR = new GlideRecord('x_1383184_charityb_item');
    if (itemGR.get(itemSysId)) {
        var currentHighestBid = parseFloat(itemGR.getValue('highest_bid_amount') || 0); // Convert to float, default to 0 if highest bid amount is not set

        if (yourBidAmount > currentHighestBid) {
            // Update the highest bid amount on the item
            itemGR.setValue('highest_bid_amount', yourBidAmount);
            itemGR.update();

            // Optionally, show a message that the bid was successful
            g_form.clearMessages();
            g_form.addInfoMessage('Your bid is the highest bid.');
        } else {
            // If the bid is not higher, show an error message and clear the field
            g_form.clearMessages();
            g_form.addErrorMessage('Your bid amount must be higher than the current highest bid amount.');
            g_form.setValue('your_bid_amount', oldValue); // Revert to the old value
        }
    } else {
        // If the item record is not found, show an error message
        g_form.clearMessages();
        g_form.addErrorMessage('The item associated with this bid was not found.');
    }
}
]]></script>
