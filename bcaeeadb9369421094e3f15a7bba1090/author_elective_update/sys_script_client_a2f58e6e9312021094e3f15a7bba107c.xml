        <applies_extended>false</applies_extended>
        <condition/>
        <description>The bid amount entered by the user is greater than the required amount (starting bid amount for the first bid and current highest bid amount for subsequent bids).</description>
        <field>your_bid_amount</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Validate bid amount</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    var itemId = g_form.getValue('item_name.number');
    var ga = new GlideAjax('BidUtils');
    ga.addParam('sysparm_name', 'validateyourBidAmount');
    ga.addParam('sysparm_item_name.number', itemId);
    ga.addParam('sysparm_your_bid_amount', newValue);
    ga.getXMLAnswer(function(response) {
        if (response !== 'valid') {
            g_form.showFieldMsg('your_bid_amount', 'Your bid amount must be greater than the highest bid amount.', 'error');
            g_form.setValue('your_bid_amount', '');
        }
    });
}
]]></script>
